<!DOCTYPE html>
<html lang="en">
	<%- include("../partials/head.ejs") %>

	<body class="index-page">
		<!-- <div class="loading-page">
			<img src="https://media.giphy.com/media/Z0qrajAVaSJcK87b9X/giphy.gif" alt="Loading Sneaker">
		</div> -->
		<%- include("../partials/header.ejs") %>
		<main>
			<div class="container">
				<!-- <a href="/user/logout"><button>Logout</button></a> -->
				<a href="/sneakers/new"
					><button class="add">Add A New Sneaker</button></a
				>
				<% for (sneaker of sneakers) { %>

				<article class="grid">
					<a href="/sneakers/<%= sneaker.id %>">
						<h2 class="name"><%= sneaker.name %></h2>
					</a>

					<a href="/sneakers/<%= sneaker.id %>">
						<img class="img" src="<%= sneaker.img %>" />
					</a>
					<div>
						<a href="/sneakers/<%= sneaker._id %>/edit"
							><button class="edit">🖋️</button></a
						>
						<form
							action="/sneakers/<%= sneaker._id %>?_method=DELETE"
							method="POST"
						>
							<input class="delete" type="submit" value="🗑️" />
						</form>
					</div>
				</article>

				<% } %>
			</div>
		</main>
	</body>
</html>
